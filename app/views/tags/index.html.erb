<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag "tagcloud" %>
<h1>Tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Uses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.meals.count %></td>
        <td><%= link_to 'Show', tag %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<br>

<ul class="cloud">
  <% @cloud_tags.each do |tag| %>
<li> <%= link_to tag.name, tag , data: { weight: tag.meals.count}%> </li>
<% end %>


</ul>

<br>

<%= link_to 'New Tag', new_tag_path %>

<%= link_to 'Next Page', tags_path(page: @page + 1) %>
<%= link_to 'Previous Page',  tags_path(page: @page - 1) %>