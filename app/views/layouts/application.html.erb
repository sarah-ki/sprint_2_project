<!DOCTYPE html>
<html>
<head>

  <!-- header end -->
  <title>Sprint2Project</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>


  <!-- header -->

  <div class="navbar navbar-expand-sm bg-dark navbar-dark">
    <ul class="navbar-nav">

      <li class="nav-item">
        <%=link_to "Luncheon", root_path, class: "navbar-brand" %>
      </li>

      <% if user_signed_in? %>
        <li class="nav-item">
          <a><%= link_to current_user.email, edit_user_registration_path, class: "nav-link" %></a>
        </li>
        <li class="nav-item">
          <a><%= link_to 'Sign_out', destroy_user_session_path, method: :delete, class: "nav-link" %></a>
        </li>

        <% if current_user.admin? %>
          <li class="nav-item">
            <a><%= link_to 'Admin lock option', users_path, class: "nav-link" %></a>
          </li>
        <% end  %>

      <% else %>
        <li class="nav-item">
          <a><%= link_to'Sign_up', new_user_registration_path, class: "nav-link" %></a>
        </li>
        <li class="nav-item">
          <a><%= link_to 'Sign_in', new_user_session_path, class: "nav-link" %></a>
        </li>

      <% end  %>

      <li class="nav-item">
        <a><%= link_to 'All Meals', meals_path, class: "nav-link"%></a>
      </li>
      <li class="nav-item">
        <a><%= link_to 'Groups', groups_path, class: "nav-link" %></a>
      </li>
      <li class="nav-item">
        <a><%= link_to 'Tags', tags_path, class: "nav-link" %></a>
      </li>
      <li class="nav-item">

        <a><%= link_to 'New Meal', new_meal_path, class: "nav-link" %></a>
      </li>




    </ul>
  </div>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <div class="container">
  <%= yield %>
</div>
</body>

</html>
