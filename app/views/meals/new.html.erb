<h1>New Meal</h1>

<%= form_for @meals do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
  </p>
  <p>
    <%= f.label :group %><br />
    <%= f.select :group_id, Group.all.collect {|x| [x.name, x.id]} %><br />
  </p>

  <p>
    <%= f.label :information %><br />
    <%= f.text_area :recipe %><br />
  </p>

  <p>
   created: <%= Time.now %>
  </p>

  <p>
    <%= f.label :tags %><br />
    <%= f.text_area :tags %><br />
  </p>

  <p>
    <%= f.label :due_date %><br />
    <%= f.datetime_select :due_date %><br />
  </p>

  <p>
    <%= f.submit "Submit Changes" %>
  </p>

<%end %>

