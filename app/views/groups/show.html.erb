<p id="notice"><%= notice %></p>

<p>
  <strong>Members:</strong>
<ul class="list-group">
  <% @group.users.each do |user| %>
      <li class="list-group-item"><%= user.email %></li>
  <% end %>
</ul>
</p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @group.description %>
</p>


<%= link_to 'Back', groups_path, type: "button", class: "btn" %>
<%= link_to 'Edit', edit_group_path(@group) , type: "button", class: "btn btn-primary"%>

<%= link_to 'Join', join_group_path(@group), type: "button", class: "btn btn-primary", method: :post %>
